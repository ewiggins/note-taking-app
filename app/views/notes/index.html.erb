<div class="header">
  <h1 class="title">A Penny For Your Thoughts</h1>
  <%= link_to 'New Note', new_note_path, class: "newbutton" %>
</div>
<div class="notes col-md-offset-2 col-md-8">
  <% @note.each do |note| %>
    <strong>Title:</strong>
    <%= note.title %>
    <strong>Body:</strong>
    <%= note.body %>
    <%= link_to 'Edit', edit_note_path(note) %>
    <%= link_to 'Delete', note_path(note), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>
